<div class="top-navigation">
  <%= button_to "Return to Menu", root_path, class: "btn return-btn", method: :get %>
  <div class="shard-balance-display">
    <p><strong>Shard Balance:</strong> <%= current_user.shard_account.balance %> Shards</p>
  </div>
  <%= button_to "Add Funds", buy_shards_shard_accounts_path, class: "btn add-funds-btn", method: :get %>
</div>

<div class="shop-tabs">
  <a href="#shop-items-section" class="shop-tab">Shop Items</a>
  <a href="#shard-purchase-section" class="shop-tab">Purchase Shards</a>
</div>

<div id="shop-items-section">
  <h2>Shop Items</h2>
  <div class="shop-items">
    <% @shop_items.each do |item| %>
      <div class="shop-item">
        <h3><%= item.name %></h3>
        <p><%= item.price_in_shards %> Shards</p>
        <%= button_to "Buy Now", buy_item_shard_accounts_path(item_id: item.id), method: :post, class: "btn-buy" %>
      </div>
    <% end %>
  </div>
</div>