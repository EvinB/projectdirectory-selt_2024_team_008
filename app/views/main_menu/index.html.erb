<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'main_menu', media: 'all' %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag 'main_menu' %>
<% end %>

<style>
    .preload-images {
        display: none;
    }
</style>
<div class="preload-images">
  <%= image_tag 'scrolling_bg1.png' %>
  <%= image_tag 'scrolling_bg2.png' %>
  <%= image_tag 'scrolling_bg3.png' %>
  <%= image_tag 'scrolling_bg4.png' %>
  <%= image_tag 'scrolling_bg5.png' %>
  <%= image_tag 'scrolling_bg6.png' %>
</div>


<div class="background-container"></div>

<div class="title">Shards of the Grid</div>

<!-- Buttons -->
<div class="button-container">
  <%= button_to "Play", games_path, method: :get, class: "button" %>
  <%= button_to "Shop", shop_index_path, method: :get, class: "button"%>
  <%= button_to "Leaderboard", leaderboard_index_path, method: :get, class: "button" %>
</div>