<!-- Login container centered on the screen -->
<div class="login-container">
  <div class="title">Log in</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login, "Email or Username" %><br />
      <%= f.text_field :login, autofocus: true, class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "button" %>
    </div>
  <% end %>

  <!-- Create an Account button -->
  <button class="button" onclick="window.location.href='<%= new_registration_path(resource_name) %>'">Create an Account</button>

  <%= render "devise/shared/links" %>
</div>