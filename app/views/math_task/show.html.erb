<%= stylesheet_link_tag 'math_task', media: 'all', 'data-turbolinks-track': 'reload' %>

<script>
    const gameId = <%= @game.id %>;
</script>

<div class="top-navigation">
  <div class="nav-left">
    <%= button_to "Return", game_path(@game), class: "btn return-btn", method: :get %>
  </div>
  <div class="nav-center shard-balance-display">
    <p>Shard Balance: <%= current_user.shard_account.balance %> Shards</p>
  </div>
  <div class="nav-right">
  </div>
</div>


<div class="math-task-container">
  <div class="npc-photo">
    <img src="<%= asset_path('npc1.png') %>" alt="NPC Photo">
  </div>

  <div class="math-chat-container">
    <div class="chat-history" id="chat-history">
      <p><strong>NPC:</strong> Welcome, adventurer! Press "Start" to receive a math question.</p>
    </div>

    <button id="start-interaction" class="btn return-btn">Start Interaction</button>

    <form class="math-response-form hidden" id="math-response-form" action="#" method="POST">
      <textarea id="user-response" class="response-textarea" placeholder="Type your answer here..."></textarea>
      <button type="submit" class="response-submit">Send</button>
    </form>
  </div>
</div>
